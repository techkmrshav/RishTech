{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,

    // âœ… Add these
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs", 
    "target": "es6"
  }
}
